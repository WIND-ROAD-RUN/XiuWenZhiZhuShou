{
  "version": 4,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 19,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "architecture": "x64",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "vs2022",
      "generator": "Visual Studio 17 2022",
      "inherits": "windows-base"
    },
    {
      "name": "vs2022-NoHardware",
      "generator": "Visual Studio 17 2022",
      "inherits": "windows-base",
      "cacheVariables": {
        "BUILD_WITHOUT_HARDWARE": "true"
      }
    },
    {
      "name": "vs2019",
      "generator": "Visual Studio 16 2019",
      "inherits": "windows-base"
    }
  ],
  "buildPresets": [
    {
      "name": "vs2022-debug-NoHardware",
      "configurePreset": "vs2022-NoHardware",
      "configuration": "Debug",
      "jobs": 8
    },
    {
      "name": "vs2022-release-NoHardware",
      "configurePreset": "vs2022-NoHardware",
      "configuration": "Release",
      "jobs": 8
    },
    {
      "name": "vs2022-debug",
      "configurePreset": "vs2022",
      "configuration": "Debug",
      "jobs": 8
    },
    {
      "name": "vs2022-release",
      "configurePreset": "vs2022",
      "configuration": "Release",
      "jobs": 8
    },
    {
      "name": "vs2019-debug",
      "configurePreset": "vs2019",
      "configuration": "Debug",
      "jobs": 8
    },
    {
      "name": "vs2019-release",
      "configurePreset": "vs2019",
      "configuration": "Release",
      "jobs": 8
    }
  ],
  "testPresets": [

  ]
}